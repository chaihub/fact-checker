# FactChecker Environment Configuration
# Copy this file to .env and fill in actual values

# Application Settings
DEBUG=false
LOG_LEVEL=INFO
ENVIRONMENT=development

# Database Configuration
DATABASE_URL=sqlite:///./factchecker.db
DATABASE_ECHO=false

# Twitter API Configuration
TWITTER_API_KEY=your_api_key_here
TWITTER_API_SECRET=your_api_secret_here
TWITTER_BEARER_TOKEN=your_bearer_token_here
TWITTER_ACCESS_TOKEN=your_access_token_here
TWITTER_ACCESS_TOKEN_SECRET=your_access_token_secret_here

# BlueSky API Configuration (for v0.1)
BLUESKY_HANDLE=your_handle_here
BLUESKY_PASSWORD=your_password_here
BLUESKY_API_URL=https://bsky.social/xrpc

# Cache Configuration
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE=1000

# API Server Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# WhatsApp Configuration
WHATSAPP_PHONE_ID=your_phone_id_here
WHATSAPP_API_TOKEN=your_api_token_here
WHATSAPP_VERIFY_TOKEN=your_verify_token_here

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD_SECONDS=3600

# External Service Timeouts (seconds)
TWITTER_API_TIMEOUT=30
EXTERNAL_API_TIMEOUT=30

# LLM Configuration (for AI-powered claim extraction)
GOOGLE_GEMINI_API_KEY=your_google_gemini_api_key_here
DEFAULT_LLM_PROVIDER=google-gemini
LLM_API_TIMEOUT=30
LLM_MAX_TOKENS=2048
LLM_TEMPERATURE=0.7

# Logging Configuration
LOG_FORMAT=json
LOG_FILE_PATH=./logs/factchecker.log
LOG_MAX_FILE_SIZE=10485760
LOG_BACKUP_COUNT=5

# OCR Configuration
TESSERACT_PATH=/usr/bin/tesseract
OCR_LANGUAGE=eng
OCR_CONFIDENCE_THRESHOLD=0.5

# Feature Flags
ENABLE_TWITTER_SEARCH=true
ENABLE_BLUESKY_SEARCH=false
ENABLE_SNOPES_INTEGRATION=false
ENABLE_ITERATIVE_QUERY_EXPANSION=false

# Monitoring & Analytics
SENTRY_DSN=
DATADOG_API_KEY=
